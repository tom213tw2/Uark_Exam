<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container-fluid">
    <nav class="navbar navbar-inverse">
      
        <div class="navbar-header">
            @Html.ActionLink("Uark_Exam", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </ul>
        <ul class="nav navbar-nav navbar-right" style="margin-right: inherit !important;">
            <li>
                <a href="#"><span class="glyphicon glyphicon-user"></span>@Session["UserName"]</a>
            </li>
            <li>
                <a href="@Url.Action("Login","Uark")"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
            </li>
        </ul>
     
    </nav>
    <div class="form-horizontal body-content">
         @RenderBody()
            <hr/>
            <footer>
                <p>&copy; @DateTime.Now.2023 - My ASP.NET Application</p>
            </footer>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>